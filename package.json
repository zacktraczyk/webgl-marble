    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.13.0",
    "tailwindcss": "^4.1.11",
